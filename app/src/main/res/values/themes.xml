<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FoodOrderingApplication" parent="Theme.Design.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/palette_1</item>
        <item name="colorPrimaryVariant">@color/palette_2</item>
        <item name="colorOnPrimary">@color/palette_3</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/palette_2</item>
        <item name="colorSecondaryVariant">@color/palette_3</item>
        <item name="colorOnSecondary">@color/palette_4</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>
</resources>